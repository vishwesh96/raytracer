<rt-scene>

<camera>
	<lookat vector3="0.0 0.0 1.0" />
	<eye	vector3="0.0 0.0 0.0" />
	<up		vector3="0.0 1.0 0.0" />
	<fov	angle="60 deg" />
	<near   double="0.0001" />
	<far    double="1000.0" />
</camera>

<image>
	<width double="2048" />
	<height double="1536" />
	<bgcolor color="0.0 0.0 0.0" />	
</image>

<materials>
	<simplemat id="diffuse">
		<diffuse color="0.7 0.2 0.2" />
		<specular color="0.0 0.0 0.0" />	
		<reflect color="0.0 0.0 0.0" />
		<transmit color="0.0 0.0 0.0" />
		<eta double="0.0"/>
		<n double="0"/>
		<isreflect bool="false"/>
		<istransmit bool="false"/>
	</simplemat>
	<simplemat id="glass">
		<diffuse color="0.5 0.5 0.5" />
		<specular color="0.1 0.1 0.1" />
		<reflect color="0.1 0.1 0.1" />
		<transmit color="0.9 0.9 0.9" />
		<eta double="1.5"/>
		<n double="100" />
		<isreflect bool="true"/>
		<istransmit bool="true"/>
	</simplemat>	
	<simplemat id="mat1">
		<diffuse color="1.0 0.1 0.1" />
		<specular color="0.1 0.1 0.1" />
		<reflect color="0.1 0.1 0.1" />
		<transmit color="0.9 0.9 0.9" />
		<eta double="1.5"/>
		<n double="50" />
		<isreflect bool="true"/>
		<istransmit bool="true"/>
	</simplemat>	
	<simplemat id="mat2">
		<diffuse color="0.0 0.1 1.0" />
		<specular color="0.1 0.1 0.1" />
		<reflect color="0.9 0.9 0.9" />
		<transmit color="0.1 0.1 0.1" />
		<eta double="1.5"/>
		<n double="50" />
		<isreflect bool="true"/>
		<istransmit bool="true"/>
	</simplemat>	
</materials>

<objects>
	<sphere material="glass">
		<center vector3="30.0 0.0 5000.0" />
		<radius double="20.0" />
	</sphere>
	<sphere material="mat2">
		<center vector3="-30.0 0.0 5000.0" />
		<radius double="20.0" />
	</sphere>
	<sphere material="diffuse">
		<center vector3="30.0 0.0 8000.0" />
		<radius double="20.0" />
	</sphere>
</objects>

<lights>
	<pointlight>
		<position vector3="200.0 0.0 100.0" />
		<color color="1.0 1.0 1.0" />
		<ka double="0.1" />
	</pointlight>
	<pointlight>
		<position vector3="200.0 0.0 6050.0" />
		<color color="1.0 1.0 1.0" />
		<ka double="0.1" />
	</pointlight>
</lights>

<integrator>
	<whitted>
		<depth-of-recursion int="3" />
	</whitted>
</integrator>


</rt-scene>
